
@{
    ViewData["Title"] = "TaskDodaj";
}
@model TaskDodajVM 
<style>
    body {
        margin: 0;
        height: 100vh;
        width: 100%;
        overflow: hidden;
        background-image: url("/img/Group 141.jpg");
        background-size: cover;
        background-repeat: no-repeat;
        background-position: top;
        color: #3C473B
    }
    #prvi {
        height: 80%;
        width: 40%;
        margin: 0 auto;
        margin-top: 100px;
        padding: 50px;
        padding-bottom: 60px;
    }

    #drugi {
        height: 100%;
        border-radius: 30px;
        width: 100%;
        box-shadow: 2px 5px 18px #888888;
        padding: 50px;
        overflow:auto;
    }
        #drugi button, h1 {
            text-align: center;
            position: center;
            color:white;
            margin-top:20px;
        }
    #treci {
        position: relative;
        height: 40px;
        text-align: center;
        margin-top: 20px;
    }
</style>
<h1>Add task</h1>
<div id="prvi">

    <div id="drugi">
        <form asp-action="Snimi">
            <span>Name:</span>
            <input style="width:100%" ; type="text" class="form-control" asp-for="Naziv" />
            <br />
            <span>Description:</span>
            <input style="width:100%" ; type="text" class="form-control" asp-for="Opis" />
            <br />
            <span>Points:</span>
            <input style="width:100%" ; type="text" class="form-control" asp-for="Bodovi" />
            <br />
            <span>Start date:</span>
            <input style="width:70%;float:right;height:37px" asp-for="Pocetak" />
            <br />
            <br />
            <span>Deadline:</span>
            <input style="width:70%;float:right;height:37px" asp-for="Rok" />
            <br />
            <br />
            <span>Projects:</span>
            <select class="form-control" asp-for="ProjektId" asp-items="@Model.Projekti"></select>
            <br />
            <span>Skills:</span>
            <select class="form-control" asp-for="VjestineId" asp-items="@Model.Vjestine"></select>
            <br />
            <br />
            <input type="hidden" asp-for="TaskId" />
            <div id="treci">
                <button style="width:150px" type="submit" class="btn btn-warning">Save</button>
                </div>
        </form>
    </div>
</div>