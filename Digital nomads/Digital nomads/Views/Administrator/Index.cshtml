                @for (var i = 0; i < Model.tuples.Count(); i++)
                {
                    <li class="njegova">
                        <div id="listContainer">
                            <img src="~/imgUpload/@Model.tuples[i].Item1.PhotoRuta" alt="Alternate Text" />
