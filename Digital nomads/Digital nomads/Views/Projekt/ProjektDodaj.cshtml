
@{
    ViewData["Title"] = "ProjektDodaj";
}
@model ProjektDodajVM

<style>
    body {
        margin: 0;
        height: 100vh;
        width: 100%;
        overflow: hidden;
        background-image: url("/img/Group 141.jpg");
        background-size: cover;
        background-repeat: no-repeat;
        background-position: top;
        color: #3C473B
    }
    #prvi {
        height: 80%;
        width: 40%;
        margin:0 auto;
        margin-top:100px;
        padding: 50px;
        padding-bottom: 60px;
    }
    #drugi {
        height: 100%;
        border-radius: 30px;
        width: 100%;
        box-shadow: 2px 5px 18px #888888;
        padding: 50px;
    }
        #drugi button, h1 {
            text-align: center;
            position:center;
        }
    #treci {
        position: relative;
        height: 40px;
        text-align: center;
        margin-top:20px;
    }
    btn btn-primary{
        position:absolute;
        left:50%;
        margin:0;
    }
     span{
        display: inline-block;
        margin:0;
    }
    #menu {
        width: 76px;
        height: 93%;
        margin-top: 100px;
        float: left;
    }

        #menu div:first-child {
            border-left: 5px solid white;
        }

        #menu img {
            margin-top: 25px;
            display: block;
            margin-left: auto;
            margin-right: auto;
            text-align: center;
        }
        #menu div {
            cursor: pointer;
        }

            #menu div:last-child {
                position: relative;
                top: 44%;
            }
            h3{
                text-align:center;
                color:lightgray;
                margin-top:10px;
            }
</style>
<h3>Add project</h3>
<div id="menu">
    <div id="firstItem">
        <img src="~/img/Dashboard.png" alt="Alternate Text" onclick="location.href='@Url.Action("Index", "Administrator")'" />
    </div>
    <div id="firstItem">
        <img src="~/img/task-list.png" alt="Alternate Text" id="blurAction" />
    </div>
    <div>
        <img src="~/img/user.png" alt="Alternate Text" onclick="location.href='@Url.Action("Profil", "Administrator")'" />
    </div>
    <div>
        <img src="~/img/on-off-button.png" alt="Alternate Text" onclick="location.href='@Url.Action("Logout", "Administrator")'" />
    </div>
</div>

<div id="prvi">

    <div id="drugi">
        <h1>Add project</h1>
        <form asp-action="ProjektSnimi">
            @*<span>Name:</span>*@
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Name" asp-for="NazivProjekta" />
            </div>
            <select style="width:100%;height:38px;border:solid 1px #ced4da" asp-for="RadnikId" asp-items="@Model.listaRadnika">
                <option disabled selected>Owner</option>
            </select>
            <br />
            <br />
            <span>Start date:</span>
            <input style="width:80%; float:right; height:37px" type="datetime-local" asp-for="DatumPocetka" />
            <br />
            <br />
            <span>Deadline:</span>
            <input style="width:85%;float:right;height:37px" type="datetime-local" asp-for="Rok" />
            <br />
            <br />
            <div class="input-group mb-3">
            <input type="text" asp-for="Opis" class="form-control" placeholder="Description" />
            </div>
            <br />
            <br />
            <input type="hidden" asp-for="ProjektId" />

            <div id="treci">
                <button style="width:150px" class="btn btn-outline-warning" type="submit">Save</button>
            </div>
        </form>
    </div>
</div>