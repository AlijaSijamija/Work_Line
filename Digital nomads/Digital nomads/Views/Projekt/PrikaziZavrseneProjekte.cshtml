
@{
    ViewData["Title"] = "PrikaziZavrseneProjekte";
}
@model IEnumerable<ProjektPrikaziVM>

    <style>
        body {
            margin: 0;
            height: 100vh;
            width: 100%;
            overflow: scroll;
            background-image: url("/img/Group 141.jpg");
            background-size: cover;
            background-repeat: no-repeat;
            background-position: top;
            color: #3C473B
        }

        #kontenjer {
            width: 80%;
            margin-top: 100px;
            margin-left: 100px;
        }
    </style>

    <div id="kontenjer">
        <h1>Show complete projects</h1>

        <table class="table table-bordered text-center">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Date of start
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Deadline
                    </th>
                    <th>
                        Final date
                    </th>
                    <th>
                        Edit
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.NazivProjekta</td>
                        <td>@x.DatumPocetka</td>
                        <td>@x.Opis</td>
                        <td>@x.Rok</td>
                        <td>@x.DatumZavrsetka</td>
                        <td>
                            <a asp-action="ProjektUredi" asp-route-Id="@x.Id" class="btn btn-warning">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
        <br />
        <a asp-action="ProjektDodaj" class="btn btn-warning">Add</a>

    </div>